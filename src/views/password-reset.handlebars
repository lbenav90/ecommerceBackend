<div id="root">
    <h1>Reestablecer contraseña:</h1>
    <form id="reset-password-form" action="/users/passwordReset" method="post">
        <h3>Generará una nueva contraseña para {{email}}</h3>
        <div id="new-password-div">
            <label for="password">Contraseña:</label>
            <input type="password" name="password" id="password-field" >
        </div>
        <div id="confirm-password-div">
            <label for="confirm">Confirmar:</label>
            <input type="password" name="confirm" id="confirm-field" >
        </div>
        <input type="hidden" name="token" value="{{token}}">
        <input type="hidden" name="email" value="{{email}}">
        <input type="submit" value="Reestablecer" />
    </form>
    {{#if error}}
        <p style="color:red">{{error}}</p>
    {{/if}}
    <p>Recordé mi contraseña<a href="/users/login">Ingresar</a></p>
    <p>No estas registrado? <a href="/users/register">Registrarme</a></p>
</div>
<script type="module" src="/static/js/reset.js"></script>